upstream django-light_it {
    #server 127.0.0.1:8002;
    server unix:///path/to/light_it-root/uwsgi.sock; # for a file socket
}

server {
        listen 80;
        server_name light_it.dev.4-com.pro;
        client_max_body_size 0;
        charset utf-8;

        location /static {
            alias /path/to/light_it-root/static_root/;
            add_header Access-Control-Allow-Origin *;
    }

        location /media {
            alias /path/to/light_it-root/media_root/;
        }

        location / {
          uwsgi_pass  django;
          include uwsgi_params;
        }
}
